<UserControl x:Class="MultiGDLauncher.GDInstanceItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MultiGDLauncher"
             mc:Ignorable="d"
             d:DesignHeight="65" d:DesignWidth="800" Cursor="Hand">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="79*" MaxWidth="79"/>
            <ColumnDefinition Width="721*"/>
        </Grid.ColumnDefinitions>
        <Label Grid.ColumnSpan="2"></Label>
        <Image x:Name="Icon" Source="/Assets/ProfilesIcons/0.png" MaxWidth="45" MaxHeight="45" />
        <Grid Grid.Column="1">
            <Label x:Name="InstanceTitle" Foreground="White" FontFamily="Montserrat" FontSize="20" Content="InstanceName [version]" Padding="5,20,5,20" />
        </Grid>
    </Grid>
</UserControl>
